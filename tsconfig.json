{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "node",
      "@nuxt/types",
      "@pinia/nuxt"
    ]
  },
  "include": [
    "nuxt.config.ts",  // Include Nuxt configuration file if needed
    "types/**/*.ts",  // Include other custom type definitions if any
    "src/**/*.ts"
  ]
}
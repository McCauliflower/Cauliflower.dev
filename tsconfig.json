{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": [
      "node",
      "@nuxt/types",
      "@pinia/nuxt"
    ]
  },
  "include": [
    "types/**/*.ts",  // Include other custom type definitions if any
    "src/**/*.ts",
    "src/**/*",
  ],
  "exclude": ["node_modules", ".nuxt", "dist"]
}